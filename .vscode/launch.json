            ],
        },
        {
            "name": "commet (debug web)",
            "request": "launch",
            "type": "dart",
            "program": "commet/lib/main.dart",
            "toolArgs": [
                "--dart-define",
                "PLATFORM=web",
                "--dart-define",
                "BUILD_MODE=debug",
