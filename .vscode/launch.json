    "version": "0.2.0",
    "configurations": [
        {
            "name": "commet (debug desktop)",
            "request": "launch",
            "program": "commet/lib/main.dart",
            "type": "dart",
            "toolArgs": [
                "--dart-define",
                "PLATFORM=linux",
                "--dart-define",
                "BUILD_MODE=debug"
            ],
        },
        {
            "name": "commet (debug windows)",
            "request": "launch",
            "type": "dart",
            "program": "commet/lib/main.dart",
