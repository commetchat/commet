    "version": "0.2.0",
    "configurations": [
        {
            "name": "commet (debug desktop)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=linux",
                "--dart-define", "BUILD_MODE=debug"
            ],
        },
        {
            "name": "commet (debug windows)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=windows",
                "--dart-define", "BUILD_MODE=debug"
            ],
        },
        {
            "name": "commet (debug mobile)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=mobile",
                "--dart-define", "BUILD_MODE=debug"
            ],
        },
        {
            "name": "commet (debug web)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=web",
                "--dart-define", "BUILD_MODE=debug"
            ],
        },
        {
            "name": "commet (release web)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=web",
                "--dart-define", "BUILD_MODE=release"
            ],
            "flutterMode": "release"
        },
        {
            "name": "commet (debug android)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=android",
                "--dart-define", "BUILD_MODE=debug"
            ],
        },
        {
            "name": "commet (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile"
        },
        {
            "name": "commet (release desktop)",
            "request": "launch",
            "type": "dart",
            "toolArgs": [
                "--dart-define", "PLATFORM=desktop",
                "--dart-define", "BUILD_MODE=release"
            ],
            "flutterMode": "release"
        },
        {
            "name": "commet widgetbook",
            "request": "launch",
            "type": "dart",
            "program": "lib/widgetbook_runner.dart"

        },
        {
            "name": "tiamat widgetbook",
            "request": "launch",
            "type": "dart",
            "program": "../tiamat/lib/tiamat.widgetbook.dart"

        },
    ]
}